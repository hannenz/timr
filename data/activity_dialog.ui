<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<requires lib="gtk+" version="3.12"/>
	<template class="TimrActivityDialog" parent="GtkDialog">
		<property name="title" translatable="yes">Activity</property>
		<property name="resizable">False</property>
		<property name="modal">True</property>
		<child internal-child="vbox">
			<object class="GtkBox" id="vbox">
				<child>
					<object class="GtkGrid" id="grid">
						<property name="visible">True</property>
						<property name="margin">6</property>
						<property name="row-spacing">12</property>
						<property name="column-spacing">6</property>
						<child>
							<object class="GtkLabel">
								<property name="visible">True</property>
								<property name="label">Description</property>
								<property name="xalign">1</property>
							</object>
							<packing >
								<property name="left_attach">0</property>
								<property name="top_attach">0</property>
							</packing>
						</child>
						<child>
							<object class="GtkEntry" id="description_entry">
								<property name="visible">True</property>
							</object>
							<packing>
								<property name="left_attach">1</property>
								<property name="top_attach">0</property>
							</packing>
						</child>
						<child>
							<object class="GtkLabel">
								<property name="visible">True</property>
								<property name="label">Job</property>
								<property name="xalign">1</property>
							</object>
							<packing >
								<property name="left_attach">0</property>
								<property name="top_attach">1</property>
							</packing>
						</child>
						<child>
							<object class="GtkComboBox" id="job_combobox">
								<property name="visible">True</property>
								<!-- <property name="model">clients_jobs</property> -->

								<child>
									<object class="GtkCellRendererText" />
									<attributes>
										<attribute name="markup">3</attribute>
									</attributes>
									<packing>
										<property name="pack-type">start</property>
									</packing>
								</child>
							</object>
							<packing>
								<property name="left_attach">1</property>
								<property name="top_attach">1</property>
							</packing>
						</child>
						<child>
							<object class="GtkLabel">
								<property name="visible">True</property>
								<property name="label">Date</property>
								<property name="xalign">1</property>
							</object>
							<packing >
								<property name="left_attach">0</property>
								<property name="top_attach">2</property>
							</packing>
						</child>
						<child>
							<object class="GtkCalendar" id="calendar">
								<property name="visible">True</property>
							</object>
							<packing>
								<property name="left_attach">1</property>
								<property name="top_attach">2</property>
							</packing>
						</child>
						<child>
							<object class="GtkLabel">
								<property name="visible">True</property>
								<property name="label">Begin</property>
								<property name="xalign">1</property>
							</object>
							<packing >
								<property name="left_attach">0</property>
								<property name="top_attach">3</property>
							</packing>
						</child>
						<child>
							<object class="GtkEntry" id="timespan_entry">
								<property name="visible">True</property>
							</object>
							<packing>
								<property name="left_attach">1</property>
								<property name="top_attach">3</property>
							</packing>
						</child>
					</object>
				</child>
			</object>
		</child>
		<child type="action">
			<object class="GtkButton" id="cancel_button">
				<property name="visible">True</property>
				<property name="label">Cancel</property>
			</object>
		</child>
		<child type="action">
			<object class="GtkButton" id="ok_button">
				<property name="visible">True</property>
				<property name="label">OK</property>
			</object>
		</child>
		<action-widgets>
			<action-widget response="cancel">cancel_button</action-widget>
			<action-widget response="ok" default="true">ok_button</action-widget>
		</action-widgets>
	</template>
</interface>