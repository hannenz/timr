		<section>
			<item>
				<attribute name="label" translatable="yes">_Add job for this client</attribute>
				<attribute name="action">app.add_job_for_client</attribute>
			</item>
		</section>
 		<section>
			<item>
				<attribute name="label" translatable="yes">_Delete</attribute>
				<attribute name="action">app.delete_client</attribute>
			</item>
		</section>
